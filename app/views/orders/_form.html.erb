<div class="container">
    
    <div class="row">
        <div class="col-md-4 col-md-offset-4">

            <%= form_with(model: order) do |f| %> 

                <% if order.errors.any? %>

                    <div style="color: red">
                        <h3 style="text-align: center; border: 1px solid;"><%= pluralize(order.errors.count,"errors")%>, check your form details again!<br/> All Fields Are Required!</h3>

                        <ul>
                            <% order.errors.each do |error| %>
                                <li class="list-group-item list-group-item-danger"><%= error.full_message %></li>
                            <% end %>
                        </ul>
                    </div>

                <% end %> 
        </div>     
    </div>

        <div class='card'>
            <div class='card-header'>
            <h1 class="text-center">Order From Anywhere</h1>
            </div><br/>

            <div class="card-body">

            <div class='row justify-content-sm-center'>
                <div class='col-md-3'>
                    <%= f.label :first_name%>
                    <%= f.text_field :first_name, placeholder:"First", class:"form-control", required: true %><br/>
                </div>

                <div class='col-md-3'>
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, placeholder:"Last", class:"form-control", required: true %><br/>
                </div>
            </div>

            <div class='row justify-content-md-center'>
                <div class='col-md-3'>
                    <%= f.label :phone_number %>
                    <%= f.text_field :phone_number, placeholder:"Don't include +91", class:"form-control", required: true %><br/>
                </div>
            
                <div class='col-md-3'>
                    <%= f.label :email %>
                    <%= f.email_field :email, id: 'user_email', type:'email', required: true, placeholder: "Email", class:"form-control" %><br/>
                </div>
            </div>

            <div class='row justify-content-md-center'>
                <div class='col-md-3'>
                    <%= f.label :files do %>
                    <span>Click and Upload your file/files</span>
                    <% end %>
                    <%= f.file_field :files, multiple: true, direct_upload: true, required: true %><br/>
                </div>
            </div>
  

            <div class='row justify-content-md-center'>
                <div class='col-md-2'>
                    <%= f.label :color %>
                    <%= f.select :color, ['Black & White', 'Color', 'Blue-Print', 'Ammonia-Print'], { prompt: 'Select' }, class:'form-select', required: true %><br/>
                </div>
            
                <div class='col-md-2'>
                    <%= f.label :paper_size %>
                    <%= f.select :paper_size, ['A0','A1','A2','A3','A4','A5', 'Legal', 'A4-PhotoPaper', 'A3-PhotoPaper', '12x18', 'Tracing Sheet'], { prompt: 'Select' }, class:'form-select', required: true %><br/>
                </div>

                <div class='col-md-2'>
                    <%= f.label :paper_style %>
                    <%= f.select :paper_style, ['Back to Back', 'Side to Side'], { prompt: 'Select' }, class:'form-select', required: true %><br/>
                </div>
            </div>


            <div class='row justify-content-md-center'>
                <div class='col-md-2'>
                    <%= f.label :quantity %>
                    <%= f.number_field :quantity, min: 1, class:'form-control', required: true %><br/>
                </div>
            </div>

            <div class='row justify-content-md-center'>
                <div class='col-md-6'>
                    <%= f.label :Address %>
                    <%= f.text_field :location, placeholder:"Aiwan Shahi Area, PDA Engineering College Road..... ", class:'form-control', required: true %><br/>
                </div>
            </div>

            <div class='row justify-content-md-center'>
                <div class='col-md-2'>
                <%= f.radio_button :delivery, 'PickUp', required: true %> 
                <%= f.label :delivery, 'PickUp', value: 'PickUp' %> <br/>
                </div>

                <div class='col-md-2'>
                <%= f.radio_button :delivery, 'Delivery', required: true %>
                <%= f.label :delivery, 'Delivery', value: 'Delivery' %>
                </div>
            </div>

            <div class='row justify-content-md-center'>
                <div class='col col-md-offset-2'>
                    <h6><b><i>NOTE: ADVANCE PAYMENT IS NECESSARY FOR DELIVERY, YOU WILL RECIEVE A CALL FOR PAYMENT ONCE THE ORDER IS PLACED</i></b></h6>
                </div>
            </div></br>

            <div class='row justify-content-md-center'>
                <div class='col-md-6'>
                <%= f.label :description %> 
                <%= f.text_area :description, placeholder:"(Optional)", class:"form-control" %><br/>
                </div>
            </div>
            
           

        
                <div class="row justify-content-md-center btn-order">
                    <div class='col-md-6'>
                        <%= f.submit 'Submit', class:'btn btn-primary'  %>
                    </div>
                </div>
            </div><br/>
           
            
            <% end %>
        
        </div>
            
        
</div>